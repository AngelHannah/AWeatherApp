<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.SignupActivity"
    android:background="@drawable/weatherappsignupbackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome!"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="38sp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please enter a valid email and password of your choice to sign up!"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="24sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="30dp"
            android:padding="20dp">

            <EditText
                android:id="@+id/signUp_Email"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:padding="8dp"
                android:background="@drawable/purple_border"
                android:drawableStart="@drawable/baseline_email_24"
                android:drawablePadding="8dp"
                android:layout_gravity="center"
                android:hint="Email"
                />

            <EditText
                android:id="@+id/signUp_Password"
                android:inputType="textPassword"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:padding="8dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/purple_border"
                android:drawableStart="@drawable/baseline_lock_24"
                android:drawablePadding="8dp"
                android:layout_gravity="center"
                android:hint="Password"
                />

            <EditText
                android:id="@+id/signUp_ConfirmPassword"
                android:inputType="textPassword"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:padding="8dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/purple_border"
                android:drawableStart="@drawable/baseline_lock_24"
                android:drawablePadding="8dp"
                android:layout_gravity="center"
                android:hint="Confirm Password"
                />

            <Button
                android:id="@+id/submit_signUpBtn"
                android:layout_height="50dp"
                android:layout_width="200dp"
                android:text="Sign Up"
                android:layout_gravity="center"
                />

            <TextView
                android:id="@+id/logInLink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Already signed up? Click here to login"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:padding="4dp"
                />


        </LinearLayout>


    </LinearLayout>
</ScrollView>